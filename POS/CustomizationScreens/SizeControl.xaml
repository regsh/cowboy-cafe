<UserControl x:Class="PointOfSale.CustomizationScreens.SizeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" x:Name="Selected">
            <Setter Property="Background" Value="Tan"/>
        </Style>
        
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="SmallBtn_Click" Margin="20" Background="Tan" FontWeight="Bold" FontSize="25" Name="SmallBtn">Small</Button>
        <Button Grid.Column="1" Click="MediumBtn_Click" Margin="20" FontWeight="Bold" FontSize="25" Name="MediumBtn">Medium</Button>
        <Button Grid.Column="2" Click="LargeBtn_Click" Margin="20" FontWeight="Bold" FontSize="25" Name="LargeBtn">Large</Button>

    </Grid>
</UserControl>
