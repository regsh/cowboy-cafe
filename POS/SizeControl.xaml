<UserControl x:Class="PointOfSale.SizeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Margin="10" Click="SmallBtn_Click">Small</Button>
        <Button Grid.Column="1" Margin="10" Click="MediumBtn_Click">Medium</Button>
        <Button Grid.Column="2" Margin="10" Click="LargeBtn_Click">Large</Button>
    </Grid>
</UserControl>
